{
    "name": "mtvs/laravel-reviews",
    "description": "Reviews and ratings for the Laravel Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mtvs",
            "email": "mtvsdev@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Reviews\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reviews\\Tests\\": "tests/",
            "Reviews\\Tests\\Database\\Factories\\": "tests/database/factories/"
        }
    },
    "require": {
        "illuminate/database": "^9.0",
        "illuminate/auth": "^9.0",
        "illuminate/http": "^9.0",
        "mtvs/eloquent-approval": "^4.0"

    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reviews\\ReviewsServiceProvider"
            ]
        }
    }
}
